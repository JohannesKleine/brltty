#!/bin/bash
. /brltty/current/libexec/canute-prologue.sh

showProgramUsagePurpose() {
cat <<END_OF_PROGRAM_USAGE_PURPOSE
The Canute braille display process won't be started when the system boots.
END_OF_PROGRAM_USAGE_PURPOSE
}

parseProgramArguments "${@}"
set -e

if systemctl --quiet is-enabled "${canuteSystemdUnit}"
then
   executeHostCommand sudo systemctl --quiet disable "${canuteSystemdUnit}"
   logNotice "Canute won't start when system boots"
else
   logTask "Canute already disabled"
fi

exit 0
