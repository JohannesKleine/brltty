#!/bin/bash
. /brltty/current/libexec/canute-prologue.sh

showProgramUsagePurpose() {
cat <<END_OF_PROGRAM_USAGE_PURPOSE
The Canute braille display process will be started when the system boots.
END_OF_PROGRAM_USAGE_PURPOSE
}

parseProgramArguments "${@}"
set -e

if systemctl --quiet is-enabled "${canuteSystemdUnit}"
then
   logTask "Canute already enabled"
else
   executeHostCommand sudo systemctl --quiet enable "${canuteSystemdUnit}"
   logNotice "Canute will start when system boots"
fi

exit 0
