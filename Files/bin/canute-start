#!/bin/bash
. /brltty/current/libexec/canute-prologue.sh

showProgramUsagePurpose() {
cat <<END_OF_PROGRAM_USAGE_PURPOSE
Start the Canute braille display process now.
END_OF_PROGRAM_USAGE_PURPOSE
}

parseProgramArguments "${@}"
set -e

if systemctl --quiet is-active "${canuteSystemdUnit}"
then
   logTask "Canute already running"
else
   executeHostCommand sudo systemctl --quiet start "${canuteSystemdUnit}"
   logNotice "Canute has been started"
fi

exit 0
