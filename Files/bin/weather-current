#!/bin/bash
. /brltty/current/libexec/canute-prologue.sh

showProgramUsagePurpose() {
cat <<END_OF_PROGRAM_USAGE_PURPOSE
Show the current weather conditions.
END_OF_PROGRAM_USAGE_PURPOSE
}

addProgramOption m flag monitor "monitor the weather"
parseProgramArguments "${@}"

set -- "${installTree}/libexec/owm" -L -U -- weather
"${monitor}" && set "${installTree}/libexec/run-command" -c -i 3600 -d 1800 -- "${@}"
"${@}"
exit "${?}"
