#!/bin/bash

installTree="/brltty/current"
. "${installTree}/bin/brltty-prologue.sh"

parseProgramArguments "${@}"
set -e

tar --extract --file "/brltty/current/etc.tar" --directory "/"
ldconfig
/brltty/current/bin/brltty-genkey -q
udevadm control --reload

systemctl daemon-reload
systemctl enable brltty@canute.path
systemctl start brltty@canute.path

exit 0
